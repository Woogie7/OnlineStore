@using OnlineStore.Domain.Entity;
@model IEnumerable<Product>
@{
	ViewBag.Title = "title";
	Layout = "_layout";
}

<form method="get" asp-controller="Product" asp-action="GetProductByName">
	<div class="input-group">
		<input class="form-control" name="inputName" autocomplete="off"/>
		<div class="input-group-lg">
			<button type="submit" class="btn btn-primary">
				Поиск
			</button>
		</div>
	</div>
</form>


<div class="container mb-4">
	<h3>Все продукты</h3>
	<div class="row">
		@foreach (var product in Model)
		{
			<div class="col-md-4">
				<div class="card mb-4">
					<img class="card-img-top product-image" src="~/image/product/@product.Image"/>
					<div class="card-body">
						<h3 class="card-title">@product.Name</h3>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
								<a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id">Подробнее</a>
							</div>
							<small class="text-feild">@product.Price</small>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>



