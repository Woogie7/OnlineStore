<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="position-sticky top-0 headerTop">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/Name.png" height="50px" wight="50px"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Product" asp-action="GetProducts">Каталог</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link paragraphLayout active text-black" asp-controller="Admin" asp-action="AdminProduct">
                                    Админ
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="nav-link">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                            <span class="text-dark fw-bold">/</span>
                            <a class="text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Register">Рег</a>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Loggout">Выйти</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footerBot text-white p-3">
        <div class="container mt-2">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <p>Hunt and Fish application</p>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4 class="mt-2">Контакты</h4>
                    <div class="mt-3">
                        <span><i class="fa-regular fa-envelope fs-5"></i></span>
                        <span class="fs-6">Mail</span>
                    </div>
                    <div class="mt-3">
                        <span><i class="fa-brands fa-whatsapp fs-5"></i></span>
                        <span class="fs-6">Whatsapp</span>
                    </div>
                    <div class="mt-3">
                        <span><i class="fa-brands fa-youtube fs-5"></i></span>
                        <span class="fs-6">YouTube</span>
                    </div>
                    <div class="mt-3">
                        <span><i class="fa-brands fa-telegram fs-5"></i></span>
                        <span class="fs-6">Telegram</span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Адрес</h4>
                    <pre>Балтийская ул., 35, Санкт-Петербург, 198095</pre>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("pageScripts", required: false)
</body>
</html>
